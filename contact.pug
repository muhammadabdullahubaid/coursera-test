extends base.pug

block scripts
    script(src="../static/index.js") 

block style 
    style
      include ../static/style.css
      include ../static/Contactstyle.css

block content
    .container
        h1 Contact Us

        form#contact(action='/contact' method='post' Class='myInput')
            input#name(type='text' name='name' placeholder='Enter your Name')
            input#age(type='number' name='age' placeholder='Enter your Age')
            input#name(type='text' name='gender' placeholder='Enter your Gender')
            input#email(type='email' name='email_id' placeholder='Enter your Email')
            textarea#address(name='address' cols='30' rows='10' placeholder='Enter your Address')
            textarea#more(name='more' cols='30' rows='10' placeholder='Write something SPECIAL about you')
            input.btn(type='submit')
